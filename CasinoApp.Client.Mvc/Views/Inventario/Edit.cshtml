@model CasinoApp.Client.Mvc.Models.ViewModels.CuInventarioViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>InventarioDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Inventario.Id" />
            <div class="form-group">
                <label for="IdProducto">Grupo de empleado</label>
                <select asp-for="Inventario.IdProducto" class="form-control">
                    <option value="">Seleccione...</option>
                    @foreach (var producto in Model.Producto)
                    {
                        <option value="@producto.IdProducto">@producto.NombreProducto</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Inventario.Stock" class="control-label"></label>
                <input asp-for="Inventario.Stock" class="form-control" />
                <span asp-validation-for="Inventario.Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Inventario.Cantidad" class="control-label"></label>
                <input asp-for="Inventario.Cantidad" class="form-control" />
                <span asp-validation-for="Inventario.Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
