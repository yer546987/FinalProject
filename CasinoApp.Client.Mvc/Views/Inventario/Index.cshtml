@model IEnumerable<CasinoApp.Entities.Inventario.InventarioDto>

@{
    ViewData["Title"] = "Index";
}

<form method="post">
    <div class="row">
        <p>
            <div class="col-xs-12 col-sm-5">
                <h3>Registro de inventario</h3>
            </div>
            <div class="col-xs-12 col-sm-2 push-md-3"></div>
            <div class="col-xs-12 col-sm-3"></div>
            <div class="col-xs-12 col-sm-2 push-md-3">
                <a asp-action="Create">
                    <input type="button" class="form-control btn btn-info" value="Crear" />
                </a>
            </div>
        </p>
    </div>
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaVencimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUnidadMedida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mecatos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInventario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVencimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUnidadMedida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mecatos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdInventario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
