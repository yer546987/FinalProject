@model CasinoApp.Entities.GrupoEmpleado.GrupoEmpleadoDto

@{
    ViewData["Title"] = "Create";
}
<div class="row text-center">
    <div class="col-md-12">
        <h3>Crear grupo de funcionario</h3>
    </div>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row g-3 align-items-center">
                <div class="col-md-4">
                    <label asp-for="NombreGrupo" class="control-label">Nombre del grupo</label>
                </div>
                <div class="col-md-8">
                    <input asp-for="NombreGrupo" class="form-control" />
                    <span asp-validation-for="NombreGrupo" class="text-danger"></span>
                </div>
            </div>
            <center>
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <button type="submit" value="Crear" class="btn btn-sm btn-info" data-toggle="modal" data-target="#exampleModalCenter">
                            Crear
                        </button> |
                        <a asp-action="Index" class="text-decoration-none">
                            <button value="Volver" class="btn btn-sm btn-secondary" type="button">
                                Volver
                            </button>
                        </a>
                    </div>
                </div>
            </center>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
