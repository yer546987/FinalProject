@model CasinoApp.Client.Mvc.Models.ViewModels.CuTipoProductoViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row text-center">
    <div class="col-md-12">
        <h3>Crear producto</h3>
    </div>
</div>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row g-3 align-items-center">
                <div class="col-md-4">
                    <label asp-for="producto.NombreProducto" class="control-label">Nombre</label>
                </div>
                <div class="col-md-8">
                    <input asp-for="producto.NombreProducto" class="form-control" />
                    <span asp-validation-for="producto.NombreProducto" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row g-3 align-items-center">
                <div class="col-md-4">
                    <label asp-for="producto.FechaVencimientoProducto" class="control-label">Fecha Vencim.</label>
                </div>
                <div class="col-md-8">
                    <input asp-for="producto.FechaVencimientoProducto" class="form-control" />
                    <span asp-validation-for="producto.FechaVencimientoProducto" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row g-3 align-items-center">
                <div class="col-md-4">
                    <label for="IdTipoProducto">Tipo producto</label>
                </div>
                <div class="col-md-8">
                    <select asp-for="producto.IdTipoProducto" class="form-control">
                        <option value="">Seleccione...</option>
                        @foreach (var Grupo in Model.TipoProducto)
                        {
                            <option value="@Grupo.IdTipoProducto">@Grupo.TipoProducto</option>
                        }
                    </select>
                </div>
            </div>
            <center>
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <button type="submit" value="Crear" class="btn btn-sm btn-info" data-toggle="modal" data-target="#exampleModalCenter">
                            Crear
                        </button> |
                        <a asp-action="Index" class="text-decoration-none">
                            <button value="Volver" class="btn btn-sm btn-secondary" type="button">
                                Volver
                            </button>
                        </a>
                    </div>
                </div>
            </center>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
