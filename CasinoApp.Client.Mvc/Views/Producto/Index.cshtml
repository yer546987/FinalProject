@model IEnumerable<CasinoApp.Entities.Producto.ProductoDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label class="control-label">Nombre del producto</label>
            </th>
            <th>
                <label class="control-label">Fecha de vencimiento</label>
            </th>
            <th>
                <label class="control-label">Tipo de producto</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVencimientoProducto)
            </td>
            <td>
                    @ViewBag.TipoProducto[item.IdTipoProducto]
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProducto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdProducto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProducto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
