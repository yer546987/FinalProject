@model IEnumerable<CasinoApp.Entities.TipoComida.TipoComidaDto>

@{
    ViewData["Title"] = "Index";
}

<form method="post">
    <div class="row">
        <p>
            <div class="col-xs-12 col-sm-5">
                <h3>Registro de tipo comida</h3>
            </div>
            <div class="col-xs-12 col-sm-2 push-md-3"></div>
            <div class="col-xs-12 col-sm-3"></div>
            <div class="col-xs-12 col-sm-2 push-md-3">
                <a asp-action="Create">
                    <input type="button" class="form-control btn btn-info" value="Crear" />
                </a>
            </div>
        </p>
    </div>
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TiempoInicial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TiempoFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Limite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cronograma)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TiempoInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TiempoFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Limite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cronograma)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
