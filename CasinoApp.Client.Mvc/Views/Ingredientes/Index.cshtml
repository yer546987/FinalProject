@model IEnumerable<CasinoApp.Entities.Ingredientes.IngredientesDto>

@{
    ViewData["Title"] = "Index";
}

<form method="post">
    <div class="row">
        <p>
            <div class="col-xs-12 col-sm-5">
                <h3>Registro de ingrediente</h3>
            </div>
            <div class="col-xs-12 col-sm-2 push-md-3"></div>
            <div class="col-xs-12 col-sm-3"></div>
            <div class="col-xs-12 col-sm-2 push-md-3">
                <a asp-action="Create">
                    <input type="button" class="form-control btn btn-info" value="Crear" />
                </a>
            </div>
        </p>
    </div>
</form>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                <label class="control-label">Cantidad</label>
            </th>
            <th>
                <label class="control-label">Tipo de comida</label>
            </th>
            <th>
                <label class="control-label">Producto</label>
            </th>
            <th>
                <label class="control-label">Opciones</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @ViewBag.TipoComida[item.IdTipoComida]
                </td>
                <td>
                    @ViewBag.Producto[item.IdProducto]
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
